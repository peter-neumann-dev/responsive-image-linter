# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80

# TypeScript / JavaScript
[*.{ts,js}]
indent_size = 2

# Markdown
[*.md]
max_line_length = 80
