# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript / JavaScript
[*.{ts,js}]
indent_size = 2

# JSON
[*.json]
indent_style = tab

# Markdown
[*.md]
max_line_length = 80

# YAML
[*.{yaml,yml}]
indent_size = 2

# CSS / SASS
[*.{css,scss,sass,less}]
indent_size = 2
