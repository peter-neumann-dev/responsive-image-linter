{
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"extends": ["standard"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"comma-dangle": ["error", "always-multiline"],
		"spaced-comment": ["error", "always", { "exceptions": ["!"] }],
		"padded-blocks": "off"
	},
	"globals": {
		"chrome": "readonly"
	}
}
